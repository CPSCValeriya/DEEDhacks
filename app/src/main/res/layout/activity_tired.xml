<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tiredbackground"
    tools:context=".TiredActivity">

    <Button
        android:id="@+id/yoga_btn_tasks"
        android:layout_width="164dp"
        android:layout_height="236dp"
        android:layout_marginStart="4dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/tired_70_horiz"
        app:layout_constraintEnd_toStartOf="@+id/tired_50_vert"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tired_10_vert"
        app:layout_constraintTop_toTopOf="@+id/tired_35_horiz" />

    <Button
        android:id="@+id/nap_btn_tasks"
        android:layout_width="164dp"
        android:layout_height="236dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/tired_50_vert"
        app:layout_constraintStart_toStartOf="@+id/tired_10_vert"
        app:layout_constraintTop_toBottomOf="@+id/yoga_btn_tasks" />


    <Button
        android:id="@+id/caffeine_btn_tasks"
        android:layout_width="164dp"
        android:layout_height="236dp"
        android:background="#00FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/tired_50_vert"
        app:layout_constraintTop_toTopOf="@+id/tired_70_horiz" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tired_35_horiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.28"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tired_70_horiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.61"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tired_50_vert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tired_10_vert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10"/>

    <Button
        android:id="@+id/btn_walk"
        android:layout_width="159dp"
        android:layout_height="236dp"
        android:layout_marginStart="210dp"
        android:layout_marginTop="209dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="286dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>