<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/walkbackground"
    android:orientation="vertical"
    tools:context=".WalkActivity">

    <WebView
        android:id="@+id/web_view"
        android:layout_width="303dp"
        android:layout_height="305dp"
        android:layout_marginStart="51dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintBottom_toTopOf="@+id/horiz_92"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/horiz_45"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="WebViewLayout" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="220dp"
        android:background="#5CCFCFCF"
        android:onClick="resetTapped"
        android:text="RESET"
        android:textAlignment="center"
        android:textColor="#E8E8E8"
        android:textSize="30sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_timer" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_marginStart="218dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="50dp"
        android:background="#5CCFCFCF"
        android:onClick="startStopTapped"
        android:text="START"
        android:textAlignment="center"
        android:textColor="#E8E8E8"
        android:textSize="30sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_timer" />

    <TextView
        android:id="@+id/text_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:text="00:00:00"
        android:textAlignment="center"
        android:textColor="#E8E8E8"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/horiz_12" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horiz_45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.41" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horiz_92"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.92" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horiz_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.12" />

    //STOP DELETING YOURSELF!!!!


</androidx.constraintlayout.widget.ConstraintLayout>