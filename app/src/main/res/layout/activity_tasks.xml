<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tasksbackground"
    tools:context=".TasksActivity">

    <Button
        android:id="@+id/tired_btn_tasks"
        android:layout_width="0dp"
        android:layout_height="132dp"
        android:layout_marginEnd="8dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/tasks_90_vert"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tasks_35_vert" />

    <Button
        android:id="@+id/stressed_btn_tasks"
        android:layout_width="0dp"
        android:layout_height="132dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="8dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/tasks_90_vert"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tasks_35_vert" />

    <Button
        android:id="@+id/upset_btn_tasks"
        android:layout_width="0dp"
        android:layout_height="132dp"
        android:layout_marginTop="288dp"
        android:layout_marginEnd="8dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/tasks_90_vert"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tasks_35_vert" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tasks_90_vert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tasks_35_vert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.32"/>
</androidx.constraintlayout.widget.ConstraintLayout>